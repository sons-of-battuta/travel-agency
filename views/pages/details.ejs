      <section class="hotelsSec">

        <h1> Best Hotels , Best Prices</h1>
      </section>
      <section class="hotelsDiv">
        <div class="container3">
          <% hotels.forEach(value=> { %>
            <div class="card3">
              <div class="imgBx3">
                <img src="<%= value.hotel_images.split(',')[1] %> " alt="">
              </div>
              <div class="content3">
                <p>
                  Rate : <%= value.star_rating %>
                </p>
                <p>
                  Price : <%= value.price%>
                </p>
                <button><a href="/hotel_details/<%= value.hotel_id%>" class="link">Details</a></button>
              </div>
              <h2 class="hotelName">
                <%= value.hotel_name %>
              </h2>
            </div>

            <% }) %>
        </div>

      </section>

      </form>



      <%- include('./layout/footer') %>
  </body>

  </html>