<%- include('./layout/head') %>

  <body>
    <%- include('./layout/header') %>

      <section class="videoSection">
        <video src="../../img/around  world.mp4" muted autoplay loop></video>
        <h1>
          Know more about <br> <br> <%=cityName.toUpperCase() %> 
        </h1>
      </section>


      <section style="display: flex; flex-direction: row; justify-content: space-around;     padding: 20px;">
      <div style="    width: 155px;
      margin-right: 61px;"><p>Weather For The  Next 7 Days</p> 
        <h2 style="margin-top: 62px;">
          <%=cityName.toUpperCase()%>
        </h2>
        
       </div> 
          <% arrayOfWeather.forEach(value=>{%>
            <div class="weatherIcons" style="display: flex; flex-direction: column; justify-content: space-around;  width: 200px;">
               <p>
              <%=value.time %>
            </p>
            <img style="width: fit-content;" src="https://www.weatherbit.io/static/img/icons/<%=value.icon %>.png" alt="">
            <p>
              <%=value.forecast %>
          </p> 
        </div> 
           
            <% }) %>
       

      </section>
      <section class="CitySection">
        <h1>Take a Look at this beauty </h1>
        <div class="cityImg">

          <% arrOfImages.forEach(value=>{%>

            <img src=<%=value %> alt="">
            <% }) %>

        </div>
      </section>
      <section class="mapSec">
        <h1>Let us guide you to <%=cityName %>
        </h1>
        <iframe id="gmap_canvas"
          src="https://maps.google.com/maps?q=<%=cityName %> &t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0"
          scrolling="no" marginheight="0" marginwidth="0"></iframe>
      </section>


