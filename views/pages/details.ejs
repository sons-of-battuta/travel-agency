  <button>Test APi</button> -->

      <!-- <button ><a>get Hotels</a></button> -->
      <!-- <input type="date" name="checkIn" required>
  <input type="date" name="checkout" required> -->


      <section class="hotelsSec">

        <h1> Best Hotels <span style="color: #f1363fd5;">| </span>Best Prices</h1>
      </section>
      <section class="hotelsDiv">
        <div class="container3">
          <% hotels.forEach(value=> { %>
            <div class="card3">
              <div class="imgBx3">
                <img src="<%= value.hotel_images.split(',')[1] %> " alt="">
              </div>
              <div class="content3">
                <p>
                  Rate : <%= value.star_rating %>
                </p>
                <p>
                  Price : <%= value.price%>
                </p>
                <button class="hotBut"><a href="/hotel_details/<%= value.hotel_id%>" class="link">Details</a></button>
              </div>
              <h2 class="hotelName">
                <%= value.hotel_name %>
              </h2>
            </div>

            <% }) %>
        </div>

      </section>

      <section class="ressSec">

        <h1> Restaurants</h1>
      </section>

      <section class="restaurantSec">
        <% arrayOfRestaurants.forEach(value=> {%>
          <div class="divOfAll">
            <div class="imagesBox">
              <img src="<%= value.image_url %> " alt="">
            </div>
            <div class="resContent">
              <h2>
                <%= value.name %>
              </h2>
              <p>
                Phone number:
                <br>
                <%= value.phone %>
              </p>
            </div>
            <div class="card-stats">
              <div class="value">Rate:</div>
              <div class="type">
                <%= value.rating %>
              </div>
              <div class="value"> Price: </div>
              <div class="type">
                <%= value.price %>
              </div>
            </div>

          </div>
          <% }) %>
      </section>

      </form>



      <%- include('./layout/footer') %>
  </body>

  </html>